<header class="c-header">
	<div class="o-grid-container">
		<div class="c-header__container">

			{# Navigation #}
			{% include "menu.twig" with {"menu": navigation_primary.get_items} %}

			<div class="o-search-icon">
				<button id="js-search-trigger">
					{% include "partials/svgs/search-icon.svg.twig"  %}
				</button>
			</div>
			{# Search modal popup #}
			{% include "partials/search-form.twig"  %}

			<button id="nav-hamburger" class="hamburger hamburger--squeeze" type="button" aria-label="Menu" aria-controls="navigation" aria-expanded="false">
