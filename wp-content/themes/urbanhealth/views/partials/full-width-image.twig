{#
  Renders an image using srcset sized for a hero
  @param image  passed ACF image reference
  @param class Class to add to image
#}

{% if image %}
  {% set image = get_image(image) %}
  <img class="{{class}}" src="{{image.src('banner')}}"
    srcset="{{get_image(image).src|resize(420) }} 420w,
            {{get_image(image).src|resize(640) }} 640w,
            {{ image.src('medium_large')}} 768w,
            {{ image.src('large')}} 1024w,
            {{ image.src('extra_large')}} 1536w,
            {{ image.src('banner')}} 1980w"
    alt="{{image.alt}}"
    loading="lazy"
    />
{% endif %}
