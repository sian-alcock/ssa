{% if image and post.meta('hero_regular_image_location') %}
	{% set image_location = post.meta('hero_regular_image_location') %}
	{% set image_class = 'c-hero__layout--image-'~ image_location %}
{% else %}
	{% set image_class = 'c-hero__layout--no-image' %}
{% endif %}

<section class='c-hero'>
	<div class="o-grid-container">
		<div class='c-hero__layout {{ image_class }}'>
			{% if image %}
				<div class='c-hero__image-container'>
					{% include 'partials/hero-image.twig' with {image: image, fullwidth: false} %}
				</div>
			{% endif %}
			<div class='c-hero__content'>
				<h1 class='o-hero-title'>{{title}}</h1>

				{% if subtitle %}
					<p class='o-hero-subtitle'>{{subtitle}}</p>
				{% endif %}

				{% if ctas %}
					{% include 'partials/cta-repeater.twig' with {
              tracking: hero_choice ~ '-' ~ image_location,
              ctas: ctas,
              class: 'c-hero__cta'
            } %}
				{% endif %}

			</div>
		</div>
	</div>
</section>
